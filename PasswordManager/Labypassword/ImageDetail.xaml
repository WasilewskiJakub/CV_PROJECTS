<UserControl x:Class="Labypassword.ImageDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labypassword"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition MinHeight="40" MaxHeight="40"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgshow" Grid.Row="0"/>
        <Button Content="SaveImage" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" Height="20" Grid.Row="1" Click="Save_Image"/>
    </Grid>
</UserControl>
